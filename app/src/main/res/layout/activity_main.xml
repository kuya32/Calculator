<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/calculations"
        android:layout_width="match_parent"
        android:layout_height="95dp"
        android:layout_marginTop="5dp"
        android:textAlignment="textEnd"
        android:textSize="56dp"
        android:textColor="#7B03FB"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/result"
        android:layout_width="match_parent"
        android:layout_height="95dp"
        android:layout_marginTop="5dp"
        android:textAlignment="textEnd"
        android:text="0"
        android:textSize="56dp"
        android:textColor="#7B03FB"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/calculations" />

    <Button
        android:id="@+id/clearButton"
        android:layout_width="188dp"
        android:layout_height="80dp"
        android:backgroundTint="#7B03FB"
        android:textColor="@color/white"
        android:text="CLEAR"
        android:textStyle="bold"
        android:textSize="20sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/result"
        android:layout_marginLeft="5dp" />

    <Button
        android:id="@+id/backspaceButton"
        android:layout_width="188dp"
        android:layout_height="80dp"
        android:backgroundTint="#7B03FB"
        android:textColor="@color/white"
        android:text="BACKSPACE"
        android:textStyle="bold"
        android:textSize="20sp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/result"
        android:layout_marginRight="5dp" />

    <Button
        android:id="@+id/button7"
        android:layout_width="92dp"
        android:layout_height="80dp"
        android:backgroundTint="#7B03FB"
        android:textColor="@color/white"
        android:text="7"
        android:textStyle="bold"
        android:textSize="30sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/clearButton"
        android:layout_marginLeft="5dp" />

    <Button
        android:id="@+id/button8"
        android:layout_width="92dp"
        android:layout_height="80dp"
        android:backgroundTint="#7B03FB"
        android:textColor="@color/white"
        android:text="8"
        android:textStyle="bold"
        android:textSize="30sp"
        app:layout_constraintLeft_toRightOf="@id/button7"
        app:layout_constraintTop_toBottomOf="@+id/clearButton"
        android:layout_marginLeft="5dp"/>

    <Button
        android:id="@+id/button9"
        android:layout_width="92dp"
        android:layout_height="80dp"
        android:backgroundTint="#7B03FB"
        android:textColor="@color/white"
        android:text="9"
        android:textStyle="bold"
        android:textSize="30sp"
        app:layout_constraintLeft_toRightOf="@+id/button8"
        app:layout_constraintTop_toBottomOf="@+id/backspaceButton"
        android:layout_marginLeft="5dp"/>

    <Button
        android:id="@+id/divideButton"
        android:layout_width="92dp"
        android:layout_height="80dp"
        android:backgroundTint="#7B03FB"
        android:textColor="@color/white"
        android:text="รท"
        android:textStyle="bold"
        android:textSize="30sp"
        app:layout_constraintLeft_toRightOf="@+id/button9"
        app:layout_constraintTop_toBottomOf="@+id/backspaceButton"
        android:layout_marginLeft="5dp"/>

    <Button
        android:id="@+id/button4"
        android:layout_width="92dp"
        android:layout_height="80dp"
        android:backgroundTint="#7B03FB"
        android:textColor="@color/white"
        android:text="4"
        android:textStyle="bold"
        android:textSize="30sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button7"
        android:layout_marginLeft="5dp"/>

    <Button
        android:id="@+id/button5"
        android:layout_width="92dp"
        android:layout_height="80dp"
        android:backgroundTint="#7B03FB"
        android:textColor="@color/white"
        android:text="5"
        android:textStyle="bold"
        android:textSize="30sp"
        app:layout_constraintLeft_toRightOf="@+id/button4"
        app:layout_constraintTop_toBottomOf="@+id/button8"
        android:layout_marginLeft="5dp"/>

    <Button
        android:id="@+id/button6"
        android:layout_width="92dp"
        android:layout_height="80dp"
        android:backgroundTint="#7B03FB"
        android:textColor="@color/white"
        android:text="6"
        android:textStyle="bold"
        android:textSize="30sp"
        app:layout_constraintLeft_toRightOf="@+id/button5"
        app:layout_constraintTop_toBottomOf="@+id/button9"
        android:layout_marginLeft="5dp"/>

    <Button
        android:id="@+id/multiplyButton"
        android:layout_width="92dp"
        android:layout_height="80dp"
        android:backgroundTint="#7B03FB"
        android:textColor="@color/white"
        android:text="x"
        android:textStyle="bold"
        android:textSize="30sp"
        app:layout_constraintLeft_toRightOf="@+id/button6"
        app:layout_constraintTop_toBottomOf="@+id/divideButton"
        android:layout_marginLeft="5dp"/>

    <Button
        android:id="@+id/button1"
        android:layout_width="92dp"
        android:layout_height="80dp"
        android:backgroundTint="#7B03FB"
        android:textColor="@color/white"
        android:text="1"
        android:textStyle="bold"
        android:textSize="30sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button4"
        android:layout_marginLeft="5dp"/>

    <Button
        android:id="@+id/button2"
        android:layout_width="92dp"
        android:layout_height="80dp"
        android:backgroundTint="#7B03FB"
        android:textColor="@color/white"
        android:text="2"
        android:textStyle="bold"
        android:textSize="30sp"
        app:layout_constraintLeft_toRightOf="@+id/button1"
        app:layout_constraintTop_toBottomOf="@+id/button5"
        android:layout_marginLeft="5dp"/>

    <Button
        android:id="@+id/button3"
        android:layout_width="92dp"
        android:layout_height="80dp"
        android:backgroundTint="#7B03FB"
        android:textColor="@color/white"
        android:text="3"
        android:textStyle="bold"
        android:textSize="30sp"
        app:layout_constraintLeft_toRightOf="@+id/button2"
        app:layout_constraintTop_toBottomOf="@+id/button6"
        android:layout_marginLeft="5dp"/>

    <Button
        android:id="@+id/pointButton"
        android:layout_width="92dp"
        android:layout_height="80dp"
        android:backgroundTint="#7B03FB"
        android:textColor="@color/white"
        android:text="."
        android:textStyle="bold"
        android:textSize="30sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button1"
        android:layout_marginLeft="5dp"/>

    <Button
        android:id="@+id/button0"
        android:layout_width="92dp"
        android:layout_height="80dp"
        android:backgroundTint="#7B03FB"
        android:textColor="@color/white"
        android:text="0"
        android:textStyle="bold"
        android:textSize="30sp"
        app:layout_constraintLeft_toRightOf="@+id/pointButton"
        app:layout_constraintTop_toBottomOf="@+id/button2"
        android:layout_marginLeft="5dp"/>

    <Button
        android:id="@+id/equalsButton"
        android:layout_width="92dp"
        android:layout_height="80dp"
        android:backgroundTint="#7B03FB"
        android:textColor="@color/white"
        android:text="="
        android:textStyle="bold"
        android:textSize="30sp"
        app:layout_constraintLeft_toRightOf="@+id/button0"
        app:layout_constraintTop_toBottomOf="@+id/button3"
        android:layout_marginLeft="5dp"/>

    <Button
        android:id="@+id/plusButton"
        android:layout_width="92dp"
        android:layout_height="80dp"
        android:backgroundTint="#7B03FB"
        android:textColor="@color/white"
        android:text="+"
        android:textStyle="bold"
        android:textSize="30sp"
        app:layout_constraintLeft_toRightOf="@+id/equalsButton"
        app:layout_constraintTop_toBottomOf="@+id/minusButton"
        android:layout_marginLeft="5dp"/>

    <Button
        android:id="@+id/minusButton"
        android:layout_width="92dp"
        android:layout_height="80dp"
        android:backgroundTint="#7B03FB"
        android:textColor="@color/white"
        android:text="-"
        android:textStyle="bold"
        android:textSize="30sp"
        app:layout_constraintLeft_toRightOf="@+id/button3"
        app:layout_constraintTop_toBottomOf="@+id/multiplyButton"
        android:layout_marginLeft="5dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>